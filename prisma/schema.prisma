// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "mongodb"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_DATABASE_URL")
}

model User {
  id           String         @id @map("_id")
  auth_session Session[]
  key          Key[]
  loggedInAt   DateTime       @default(now()) @updatedAt
  username     String         @unique
  avatar       String
  skin         String
  cape         String?
  banner       String?
  accent_color Int?
  locale       String?
  minions      MinionSeller[]
  chatsAsUser1 Chat[]         @relation("user1")
  chatsAsUser2 Chat[]         @relation("user2")
  messages     Message[]
}

model Session {
  id             String @id @map("_id")
  user_id        String
  active_expires BigInt
  idle_expires   BigInt
  user           User   @relation(references: [id], fields: [user_id], onDelete: Cascade)

  @@index([user_id])
}

model Key {
  id              String  @id @map("_id")
  hashed_password String?
  user_id         String
  user            User    @relation(references: [id], fields: [user_id], onDelete: Cascade)

  @@index([user_id])
}

model Minion {
  id             String         @id @map("_id")
  name           String
  generator      String
  generator_tier Int
  texture        String
  skin           String
  maxTier        Int
  craftCost      Int           @default(0)
  sellers        MinionSeller[]
}

model MinionSeller {
  id          String   @id @default(cuid()) @map("_id")
  minion_id   String
  user_id     String
  user        User     @relation(fields: [user_id], references: [id], onDelete: Cascade)
  minion      Minion   @relation(fields: [minion_id], references: [id], onDelete: Cascade)
  hasInfusion Boolean  @default(false)
  price       Float
  amount      Int?
  timeCreated DateTime @default(now()) @updatedAt

  @@index([user_id])
  @@index([minion_id])
}

model Chat {
  id        String    @id @default(cuid()) @map("_id")
  user1_id  String
  user2_id  String
  user1     User      @relation("user1", fields: [user1_id], references: [id])
  user2     User      @relation("user2", fields: [user2_id], references: [id])
  messages  Message[]
  createdAt DateTime  @default(now())
  user1Read Boolean   @default(false)
  user2Read Boolean   @default(false)
}

model Message {
  id        String   @id @default(cuid()) @map("_id")
  chat_id   String
  user_id   String
  content   String
  chat      Chat     @relation(fields: [chat_id], references: [id])
  user      User     @relation(fields: [user_id], references: [id])
  createdAt DateTime @default(now())

  @@index([chat_id])
  @@index([user_id])
}
